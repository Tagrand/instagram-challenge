<h1> Add a new Pict! </h1>

<% @pict.errors.messages.each_value do |issue| %>
  <% issue.each do |message| %>
    <p> <%= message %> </p>
  <% end %>
<% end %>

<%= simple_form_for @pict do |pict| %>
  <%= pict.input :title %>
  <%= pict.input :hints %>
  <%= pict.input :answer %>
  <%= pict.file_field :image %>
  <%= pict.submit 'Add Pict' %>
<% end %>
